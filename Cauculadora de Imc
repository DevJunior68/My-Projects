print('Olá, vamos calcular seu IMC?')
print('Preciso saber seu peso e sua altura para calcular seu IMC!')

Peso = int(input('Digite o seu Peso? '))
Altura = float(input('Digite a sua altura? '))

IMC = Peso / (Altura ** 2)

print(f'Esse é o seu IMC:  {IMC:.2f}')

if IMC < 18.4:
  print('Você se encontra a baixo do peso!')
elif IMC >= 18.5 and IMC <= 24.9:
  print('você está com o peso ideal!')
elif IMC >= 25 and IMC <= 29.9:
  print('Você se encontra acima do peso!')
elif IMC >= 30 and IMC <= 34.9:
  print('Você se encontra em um quadro de obesidade!')
elif IMC >= 35 and IMC <= 39.9:
  print('Você se encontra em um quadro de obesidade servera!')
else:
  print('Você se encontra em um quadro de obesidade mórbida!')
